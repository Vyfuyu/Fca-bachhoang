{
  "name": "bachhoang-fca",
  "version": "4.0.1",
  "module": "commonjs",
  "types": "src/types/index.d.ts",
  "description": "Advanced Facebook Chat API (FCA) library with enhanced anti-checkpoint protection and automatic cookie refresh. Built by Bach Hoang with advanced anti-detection features - Pure npm package for building reliable Messenger bots",
  "main": "module/index.js",
  "files": [
    "module/",
    "src/",
    "LICENSE-MIT",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "test": "mocha tests/**/*.test.js --timeout 10000 --exit",
    "test:watch": "mocha tests/**/*.test.js --watch",
    "test:coverage": "nyc --reporter=text --reporter=html mocha tests/**/*.test.js --timeout 10000 --exit",
    "lint": "eslint src/**/*.js module/**/*.js",
    "lint:fix": "eslint src/**/*.js module/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"module/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"module/**/*.js\" \"tests/**/*.js\"",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "prepare": "husky install || true",
    "prepublishOnly": "echo 'Preparing to publish bachhoang-fca...'",
    "docs": "jsdoc -c jsdoc.json"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bachhoang/bachhoang-fca"
  },
  "author": "Bach Hoang (Bạch Hoàng Chí Tôn) <https://www.facebook.com/aoyama.nanami.2025>",
  "contributors": [
    "Bach Hoang - Main Developer & Enhanced Protection",
    "Original contributors from ws3-fca and biar-fca projects"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bachhoang/bachhoang-fca/issues"
  },
  "homepage": "https://github.com/bachhoang/bachhoang-fca#readme",
  "keywords": [
    "facebook",
    "chat",
    "api",
    "fca",
    "bachhoang",
    "bachhoang-fca",
    "bach-hoang",
    "anti-checkpoint",
    "anti-detection",
    "messenger-bot",
    "facebook-bot"
  ],
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "axios": "^1.13.2",
    "axios-cookiejar-support": "^6.0.4",
    "chalk": "4.1.2",
    "cheerio": "^1.1.2",
    "deepdash": "^5.3.9",
    "express": "^4.21.2",
    "form-data": "^4.0.4",
    "freeport": "^1.0.5",
    "gradient-string": "1.2.0",
    "https-proxy-agent": "^5.0.1",
    "jsonpath-plus": "^10.3.0",
    "lodash": "^4.17.21",
    "mqtt": "^3.0.0",
    "node-cron": "^4.2.1",
    "tough-cookie": "4.1.4",
    "undici": "^7.16.0",
    "user-agents": "^1.1.669",
    "websocket-stream": "^5.3.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/axios": "^0.9.36",
    "@types/chai": "^5.2.3",
    "@types/express": "^5.0.5",
    "@types/form-data": "^2.2.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "^24.10.1",
    "@types/sinon": "^20.0.0",
    "@types/tough-cookie": "^4.0.5",
    "chai": "^6.2.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jsdoc": "^4.0.2",
    "lint-staged": "^16.2.6",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.x"
  },
  "overrides": {
    "tough-cookie": "4.1.4"
  }
}
